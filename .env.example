# Juli Calendar Agent Configuration
# Copy this file to .env and fill in your actual values

# OpenAI API Key (required for AI functionality)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Reclaim.ai API Key (required for task management)
# Get from: https://app.reclaim.ai/settings/developer
# Click "Generate New API Key" and name it "Juli Integration"
# This is a long alphanumeric string, no specific prefix
RECLAIM_API_KEY=your-reclaim-api-key-here

# Nylas OAuth Configuration (required for calendar integration)
# Get these from your Nylas dashboard: https://dashboard-v3.nylas.com
NYLAS_CLIENT_ID=your-nylas-client-id-here
NYLAS_API_KEY=nyk_v0_your-nylas-api-key-here

# This will be obtained through OAuth flow - do not set manually
# NYLAS_GRANT_ID=will-be-set-after-oauth

# Nylas API Configuration
NYLAS_API_URI=https://api.us.nylas.com  # Use https://api.eu.nylas.com for EU region

# For local development
NYLAS_CALLBACK_URI=http://localhost:5002/api/nylas-calendar/callback
# For production, update to your domain:
# NYLAS_CALLBACK_URI=https://your-domain.com/api/nylas-calendar/callback

# A2A Configuration
# For local development
A2A_PUBLIC_BASE_URL=http://localhost:5002
# For production, update to your public URL:
# A2A_PUBLIC_BASE_URL=https://your-domain.com

# Optional: Development authentication secret
# A2A_DEV_SECRET=your-dev-secret-for-testing

# Server Configuration
PORT=5002  # Must match Nylas callback configuration
HOST=0.0.0.0
FLASK_ENV=development  # Set to 'production' for production
DEBUG=true  # Set to 'false' for production

# Test Configuration (optional)
TEST_USER_TIMEZONE=America/New_York
TEST_SERVER_URL=http://localhost:5002

# E2E Test Configuration (optional)
E2E_LOGGING_ENABLED=false
E2E_LOG_FILE=tests/e2e/e2e_http.log
E2E_SKIP_CLEANUP=false